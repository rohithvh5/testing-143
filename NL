    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const isReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

        // Hamburger Menu Logic
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        if (hamburger && navLinks) {
            hamburger.addEventListener('click', () => {
                hamburger.classList.toggle('toggle');
                navLinks.classList.toggle('active');
            });
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.addEventListener('click', () => {
                    hamburger.classList.remove('toggle');
                    navLinks.classList.remove('active');
                });
            });
        }

        // Intersection Observer for Scroll Animations
        if ('IntersectionObserver' in window && !isReducedMotion) {
            const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -50px 0px' };
            const revealObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);
            document.querySelectorAll('.reveal').forEach(el => revealObserver.observe(el));
        } else {
            document.querySelectorAll('.reveal').forEach(el => el.classList.add('active'));
        }
        
        // --- Gemini API Integration ---
        const API_KEY = ""; // Kept empty
        const API_URL = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${API_KEY}`;
        
        const contentBtn = document.getElementById('generate-content-btn');
        const marketBtn = document.getElementById('analyze-market-btn');
        const contentInput = document.getElementById('content-topic');
        const marketInput = document.getElementById('market-topic');
        const contentResultDiv = document.getElementById('content-result');
        const marketResultDiv = document.getElementById('market-result');

        const loadingHTML = `...`; // Simple loading text

        async function callGeminiAPI(prompt, useSearch, resultDiv) {
            const payload = {
                contents: [{ parts: [{ text: prompt }] }],
            };
            if (useSearch) {
                payload.tools = [{ "google_search": {} }];
            }

            resultDiv.textContent = loadingHTML;

            try {
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                if (!response.ok) throw new Error(`API Error: ${response.statusText}`);
                const result = await response.json();
                const candidate = result.candidates?.[0];
                if (candidate && candidate.content?.parts?.[0]?.text) {
                    resultDiv.textContent = candidate.content.parts[0].text;
                } else {
                    resultDiv.textContent = "Sorry, I couldn't generate a response. Please try again.";
                }
            } catch (error) {
                console.error("Gemini API call failed:", error);
                resultDiv.textContent = `An error occurred. Please check the console.`;
            }
        }

        contentBtn.addEventListener('click', () => {
            const topic = contentInput.value.trim();
            if (!topic) {
                contentResultDiv.textContent = 'Please enter a topic.';
                return;
            }
            const prompt = `Act as an expert digital marketing strategist. For the business topic "${topic}", generate a list of 5 creative and engaging content ideas. For each idea, provide a catchy title and a brief 1-2 sentence description. Format the output clearly.`;
            callGeminiAPI(prompt, false, contentResultDiv);
        });

        marketBtn.addEventListener('click', () => {
            const industry = marketInput.value.trim();
            if (!industry) {
                marketResultDiv.textContent = 'Please enter an industry.';
                return;
            }
            const prompt = `Act as a senior market analyst. Provide a concise analysis of the current state of the "${industry}" industry. Focus on three key areas: 1) Major Trends, 2) Key Opportunities, and 3) Potential Challenges. Use the latest available information from Google Search.`;
            callGeminiAPI(prompt, true, marketResultDiv);
        });
    });
    </script>
</body>
